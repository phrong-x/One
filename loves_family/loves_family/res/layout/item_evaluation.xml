<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin_evaluation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.3"
            android:background="@drawable/bgimg_item"
            android:weightSum="7" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4.4"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px10"
                android:paddingRight="@dimen/px15" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:singleLine="true"
                    android:text="重庆棒棒军集团有限公司"
                    android:textColor="@color/title_bar_font_color"
                    android:textSize="@dimen/font_size30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px5"
                    android:drawableLeft="@drawable/bgimg_location"
                    android:gravity="bottom"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:text="渝中区朝天门地下仓库11号附5号"
                    android:textColor="@color/forgot_font_color"
                    android:textSize="@dimen/font_size20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="质量："
                        android:textColor="@color/forgot_font_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star25" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="业务："
                        android:textColor="@color/forgot_font_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="搬运"
                        android:textColor="@color/font_color_4c4c4c" />
                </TableRow>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:text="已评价"
            android:textColor="@color/title_bar_font_color" />
    </LinearLayout>

</LinearLayout>