<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor_gray"
    android:orientation="vertical"
    tools:context="com.phrong.ihome.login.ForgotPasswordActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgimg_navigation_bar"
        android:gravity="center"
        android:src="@drawable/bgimg_navigation_bar"
        android:text="@string/title_bar_forgot_password"
        android:textColor="@color/title_bar_font_color"
        android:textSize="@dimen/font_size36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/px20" >

        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgimg_input"
            android:hint="@string/hint_input_phone_number"
            android:inputType="phone"
            android:paddingLeft="@dimen/px10"
            android:singleLine="true"
            android:textColor="@color/title_bar_font_color"
            android:textColorHint="@color/forgot_font_color"
            android:textSize="@dimen/font_size20" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/edtAuthCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px15"
                android:layout_weight="1.7"
                android:background="@drawable/bgimg_input"
                android:hint="@string/hint_input_auth_code"
                android:inputType="phone"
                android:paddingLeft="@dimen/px10"
                android:singleLine="true"
                android:textColor="@color/title_bar_font_color"
                android:textColorHint="@color/forgot_font_color"
                android:textSize="@dimen/font_size20" />

            <ImageButton
                android:id="@+id/imgBtnGetAuthCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:src="@drawable/bgimg_get_auth_code" />
        </TableRow>

        <ImageButton
            android:id="@+id/imgBtnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:background="@null"
            android:src="@drawable/bgimg_next" />
    </LinearLayout>

</LinearLayout>