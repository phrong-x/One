<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notice_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px5"
        android:paddingLeft="@dimen/px10"
        android:paddingRight="2dp"
        android:paddingTop="@dimen/px5" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:singleLine="true"
            android:text="送到五公里渝澳大厦"
            android:textColor="@color/title_bar_font_color"
            android:textSize="@dimen/font_size30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px5"
            android:drawableLeft="@drawable/location_image"
            android:drawablePadding="@dimen/px5"
            android:gravity="bottom"
            android:maxLength="24"
            android:singleLine="true"
            android:text="沙坪坝区汉渝路89号17洞"
            android:textColor="@color/forgot_font_color"
            android:textSize="@dimen/font_size20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/forgot_font_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="60"
                android:singleLine="true"
                android:text="2014-08-26"
                android:textColor="@color/font_color_4c4c4c" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类别："
                android:textColor="@color/forgot_font_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运送"
                android:textColor="@color/font_color_4c4c4c" />
        </TableRow>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginRight="@dimen/px10"
        android:background="@drawable/line_v" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px10"
        android:text="已接受"
        android:textColor="@color/font_color_4c4c4c"
        android:textSize="@dimen/px22" />

</LinearLayout>