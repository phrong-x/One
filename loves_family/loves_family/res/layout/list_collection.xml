<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linCollection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_line"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px5"
        android:paddingLeft="@dimen/px10"
        android:paddingRight="2dp"
        android:paddingTop="@dimen/px5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆梦有限责任公司"
            android:maxLength="60"
            android:singleLine="true"
            android:textColor="@color/title_bar_font_color"
            android:textSize="@dimen/font_size30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px5"
            android:drawableLeft="@drawable/location_image"
            android:drawablePadding="@dimen/px5"
            android:gravity="bottom"
            android:text="江北观音桥"
            android:textColor="@color/forgot_font_color"
            android:textSize="@dimen/font_size20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="质量："
                android:textColor="@color/forgot_font_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/star35" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务："
                android:textColor="@color/forgot_font_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修"
                android:textColor="@color/title_bar_font_color" />
        </TableRow>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginRight="@dimen/px10"
        android:background="@drawable/line_v" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/px10"
        android:src="@drawable/telephone_image" />

</LinearLayout>